@model IEnumerable<AplicacionWebGym.Models.Ejercicios_PCLS>

@{

}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Lista_Ejercicios</title>
</head>
<h2> Lista de Fechas por cliente</h2>
<body>
    <table class="table">
        <tr>
            <th hidden>
                @Html.DisplayNameFor(model => model.IdEjercicios_P)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.fecha_ej_p)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdDatos)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td hidden>
                    @Html.DisplayFor(modelItem => item.IdEjercicios_P)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.fecha_ej_p)
                </td>
                <td>
                    @AplicacionWebGym.Controllers.EjerciciosFuncionalController.nombre_persona(item.IdDatos)
                </td>
                <td>
                    @Html.ActionLink("Lista de ejercicios", "Lista_Ejercicios", new { id = item.IdEjercicios_P }, new { @class = "btn btn-default" })    |
                    @Html.ActionLink("Agregar Ejercicios", "Agregar_Ejercicio", new { id = item.IdEjercicios_P }, new { @class = "btn btn-default" }) |
                    @Html.ActionLink("Eliminar Fecha", "EliminarFecha", new { id = item.IdEjercicios_P, id2 = item.IdDatos }, new { @class = "btn btn-default", onclick = "confirmDel(event)" })
                </td>
            </tr>
        }

    </table>
</body>
</html>

<script>
    function confirmDel(e) {
        var agree = confirm("¿Realmente deseas ELIMINAR esta fecha?");

        if (agree == false)
            e.preventDefault();
    }

</script>
