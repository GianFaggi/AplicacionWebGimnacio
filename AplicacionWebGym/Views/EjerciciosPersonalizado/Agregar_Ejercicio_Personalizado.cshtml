@model AplicacionWebGym.Models.DetalleEjercicioTCLS

@{
    ViewBag.Title = "Agregar_Ejercicio_Personalizado";
    Layout = "~/Views/Shared/_LayoutPersonalizado.cshtml";
}

<h2>Agregar Ejercicio</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.tipoDeEjercicio, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.tipoDeEjercicio, new { htmlAttributes = new { @class = "form-control", @placeholder = "Press" } })
                @Html.ValidationMessageFor(model => model.tipoDeEjercicio, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.repeticiones, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.repeticiones, new { htmlAttributes = new { @class = "form-control", @placeholder = "60" } })
                @Html.ValidationMessageFor(model => model.repeticiones, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Agregar" class="btn btn-success" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Volver a la lista de personas", "Lista_Personas_Ejercicios_Personalizados" , null , new { @class = "btn btn-default" })
</div>
