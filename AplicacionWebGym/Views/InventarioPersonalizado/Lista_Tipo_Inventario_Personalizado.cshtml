@model IEnumerable<AplicacionWebGym.Models.InventarioCLS>

@{
    ViewBag.Title = "Lista_Tipo_Inventario_Personalizado";
    Layout = "~/Views/Shared/_LayoutPersonalizado.cshtml";
}

<h2>Lista Materiales</h2>
<p>
    @Html.ActionLink("Agregar Material", "Agregar_Tipo_Inventario_Personalizado", null, new { @class = "btn btn-primary" })
</p>

<table class="table">
    <tr>
        <th hidden>
            @Html.DisplayNameFor(model => model.IdInventario)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TipoInventario)
        </th>
        <th hidden>
            @Html.DisplayNameFor(model => model.IdUsuario)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td hidden>
                @Html.DisplayFor(modelItem => item.IdInventario)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TipoInventario)
            </td>
            <td hidden>
                @Html.DisplayFor(modelItem => item.IdUsuario)
            </td>
            <td>
                @Html.ActionLink("Agregar detalles", "Agregar_Detalle_Inventario_Personalizado", new { id = item.IdInventario }, new { @class = "btn btn-default" }) |
                @Html.ActionLink("Ver detalles", "Detalle_Inventario_Personalizado", new { id = item.IdInventario }, new { @class = "btn btn-default" }) |
                @Html.ActionLink("Eliminar", "Eliminar_Tipo_Personalizado", new { id = item.IdInventario }, new { @class = "btn btn-default", onclick = "confirmDel(event)" })
            </td>
        </tr>
    }

</table>
<script>
        function confirmDel(e) {
            var agree = confirm("¿Realmente deseas ELIMINAR este material?");

            if (agree == false)
                e.preventDefault();
        }

</script>
