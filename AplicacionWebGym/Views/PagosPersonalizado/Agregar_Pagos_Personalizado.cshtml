@model AplicacionWebGym.Models.PagosCLS

@{
    ViewBag.Title = "Agregar_Pagos_Personalizado";
    Layout = "~/Views/Shared/_LayoutPersonalizado.cshtml";
}

<h2>Agregar Pago</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })


    <div class="form-group">
        @Html.LabelFor(model => model.fecha, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.fecha, new { htmlAttributes = new { @class = "form-control", @placeholder = "06/04/1997" } })
            @Html.ValidationMessageFor(model => model.fecha, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.esAsociado, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EnumDropDownListFor(model => model.esAsociado, "--Es asociado?--", new { @class = "form - control" })
            @Html.ValidationMessageFor(model => model.esAsociado, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Agregar" class="btn btn-success"     />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Volver lista de pagos", "Lista_Pagos_Persona_Personalizado", null, new { @class = "btn btn-default"})
</div>
